@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix brick: <https://brickschema.org/schema/Brick#> .
@prefix rec: <https://w3id.org/rec#> .
@prefix ex: <http://example.org/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# Hotel entity
ex:Hotel_example_hotel rdf:type rec:Shelter ;
    rdfs:label "example_hotel" .

# Hotel Room
ex:HotelRoom_example_room rdf:type rec:Bedroom ;
    rdfs:label "example_room" ;
    brick:hasLocation ex:Hotel_example_hotel .

# Temperature Sensor
ex:TemperatureSensor_example_room rdf:type brick:Temperature_Sensor ;
    rdf:type brick:Sensor ;
    rdf:type brick:Point ;
    brick:hasLocation ex:HotelRoom_example_room ;
    brick:hasAmbientTemperature <https://fiware.eonerc.rwth-aachen.de/v2/entities/TemperatureSensor:example_room/attrs/temperature/value> .

# CO2 Sensor
ex:CO2Sensor_example_room rdf:type brick:CO2_Sensor ;
    rdf:type brick:Air_Quality_Sensor ;
    rdf:type brick:Sensor ;
    rdf:type brick:Point ;
    brick:hasLocation ex:HotelRoom_example_room ;
    brick:hasOutputSubstance <https://fiware.eonerc.rwth-aachen.de/v2/entities/CO2Sensor:example_room/attrs/co2/value> .

# Presence Sensor (Occupancy Sensor)
ex:PresenceSensor_example_room rdf:type brick:Occupancy_Sensor ;
    rdf:type brick:Sensor ;
    rdf:type brick:Point ;
    brick:hasLocation ex:HotelRoom_example_room ;
    rec:locatedIn <https://fiware.eonerc.rwth-aachen.de/v2/entities/PresenceSensor:example_room/attrs/pir/value> .

# Fresh Air Ventilation
ex:FreshAirVentilation_example_room rdf:type brick:Fresh_Air_Fan ;
    rdf:type brick:Fan ;
    rdf:type brick:Equipment ;
    rdf:type brick:Air_System ;
    rdf:type brick:Ventilation_Air_System ;
    brick:hasLocation ex:HotelRoom_example_room ;
    rec:targetPoint <https://fiware.eonerc.rwth-aachen.de/v2/entities/FreshAirVentilation:example_room/attrs/airFlowSetpoint/value> .

# Radiator Thermostat
ex:RadiatorThermostat_example_room rdf:type brick:Radiator ;
    rdf:type brick:HVAC_Equipment ;
    rdf:type brick:Equipment ;
    brick:hasLocation ex:HotelRoom_example_room ;
    rec:targetPoint <https://fiware.eonerc.rwth-aachen.de/v2/entities/RadiatorThermostat:example_room/attrs/temperatureSetpoint/value> .

# Cooling Coil
ex:CoolingCoil_example_room rdf:type brick:Cooling_Coil ;
    rdf:type brick:Coil ;
    rdf:type brick:HVAC_Equipment ;
    rdf:type brick:Equipment ;
    brick:hasLocation ex:HotelRoom_example_room ;
    rec:portSpeed <https://fiware.eonerc.rwth-aachen.de/v2/entities/CoolingCoil:example_room/attrs/fanSpeed/value> .

# Ambient Temperature Sensor
ex:AmbientTemperatureSensor rdf:type brick:Outside_Air_Temperature_Sensor ;
    rdf:type brick:Temperature_Sensor ;
    rdf:type brick:Sensor ;
    rdf:type brick:Point ;
    brick:hasLocation ex:Hotel_example_hotel ;
    brick:hasAmbientTemperature <https://fiware.eonerc.rwth-aachen.de/v2/entities/AmbientTemperatureSensor/attrs/temperatureAmb/value> .